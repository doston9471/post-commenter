<div class="container">
  <h2>Login</h2>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: sessions_path, method: :post, class: "mt-3" do |f| %>
    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, name: "user[email]", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Password", class: "form-label" %>
      <%= f.password_field :password, name: "user[password]", class: "form-control", required: true %>
    </div>

    <%= f.submit "Login", class: "btn btn-primary" %>
  <% end %>
</div>
